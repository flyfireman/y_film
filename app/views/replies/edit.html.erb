<h1>Editing reply</h1>

<%= error_messages_for :reply %>

<% form_for([@topic,@reply]) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', topic_path(@topic) %>
